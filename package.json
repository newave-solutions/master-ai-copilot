{
  "name": "ai-copilot-backend",
  "version": "1.0.0",
  "private": true,
  "description": "AI orchestration platform with master-agent and mcp-server microservices",
  "workspaces": [
    "master-agent",
    "mcp-server"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=master-agent && npm install --workspace=mcp-server",
    "dev": "npm-run-all --parallel dev:*",
    "dev:master": "npm run dev --workspace=master-agent",
    "dev:mcp": "npm run dev --workspace=mcp-server",
    "build": "npm run build --workspace=master-agent && npm run build --workspace=mcp-server",
    "start": "npm-run-all --parallel start:*",
    "start:master": "npm run start --workspace=master-agent",
    "start:mcp": "npm run start --workspace=mcp-server",
    "prisma:migrate": "npm run prisma:migrate --workspace=master-agent",
    "prisma:generate": "npm run prisma:generate --workspace=master-agent",
    "prisma:studio": "npm run prisma:studio --workspace=master-agent",
    "test": "npm run test --workspace=master-agent && npm run test --workspace=mcp-server"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "^7.0.0",
    "@types/node": "^24.10.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^7.0.0",
    "tsx": "^4.20.6"
  }
}
